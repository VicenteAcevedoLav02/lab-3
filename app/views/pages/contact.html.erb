<form id="myForm">
  <div class="form-group">
    <label for="exampleInputName1">Name</label>
    <input type="name" class="form-control" id="exampleInputName1" aria-describedby="nameHelp" placeholder="Enter name">
  
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
  
    <label for="exampleInputMessage1">Message</label>
    <input type="Message" class="form-control" id="exampleInputMessage1" placeholder="Message">
    <br>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>

  <button type="submit" class="btn btn-primary" id="submitButton">Submit</button>
</form>

<div id="messageContainer"></div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    document.getElementById('myForm').addEventListener('submit', function(event) {
      event.preventDefault(); 
      var message = "Form submitted successfully!";
      
      document.getElementById('messageContainer').innerHTML = '<div class="alert alert-success mt-3">' + message + '</div>';
    });
  });
</script>
